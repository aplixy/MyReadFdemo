<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
    android:padding="10dp">
    
    <ImageView
        android:id="@+id/item_iv_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/word2007"/>
    
    <TextView
        android:id="@+id/item_tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="test.docx"
        android:layout_toRightOf="@id/item_iv_icon"
        android:layout_marginLeft="10dp"
        android:textSize="18sp"
        android:textStyle="bold"/>
    
    <TextView
        android:id="@+id/item_tv_path"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="middle"
        android:text="storage/emulated/0"
        android:layout_alignLeft="@+id/item_tv_name"
        android:layout_below="@+id/item_tv_name"
        android:layout_marginTop="7dp"
        android:textColor="#cccccc"
        android:textSize="16sp"
        android:textStyle="italic"/>

</RelativeLayout>